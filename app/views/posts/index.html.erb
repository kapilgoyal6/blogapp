<h1>My Blogs List...</h1>

<table border="" width="100%">
  <thead>
    <tr style="font-size:20px" height="50px">
      <th width="20%">Title</th>
      <th width="60%">Blog Description</th>
      <th colspan="3">Select</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr height="30px">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, style: 'color:green' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), style: 'color:#ffa500' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color:#ff0000' %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_post_path, style: 'color:#ff4500; font-size:20px'  %>
